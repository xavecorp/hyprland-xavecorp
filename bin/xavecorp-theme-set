#!/bin/bash

# xavecorp-theme-set: Set a theme, specified by its name.
# Usage: xavecorp-theme-set <theme-name>

if [[ -z "$1" && "$1" != "CNCLD" ]]; then
  echo "Usage: xavecorp-theme-set <theme-name>" >&2
  exit 1
fi

THEMES_DIR="$HOME/.config/xavecorp/themes/"
CURRENT_THEME_DIR="$HOME/.config/xavecorp/current/theme"

THEME_NAME=$(echo "$1" | sed -E 's/<[^>]+>//g' | tr '[:upper:]' '[:lower:]' | tr ' ' '-')
THEME_PATH="$THEMES_DIR/$THEME_NAME"

# Check if the theme entered exists
if [[ ! -d "$THEME_PATH" ]]; then
  echo "Theme '$THEME_NAME' does not exist in $THEMES_DIR" >&2
  exit 2
fi

# Update theme symlinks
ln -nsf "$THEME_PATH" "$CURRENT_THEME_DIR"

# Change gnome modes
if [[ -f ~/.config/xavecorp/current/theme/light.mode ]]; then
  gsettings set org.gnome.desktop.interface color-scheme "prefer-light"
  gsettings set org.gnome.desktop.interface gtk-theme "Adwaita"
else
  gsettings set org.gnome.desktop.interface color-scheme "prefer-dark"
  gsettings set org.gnome.desktop.interface gtk-theme "Adwaita-dark"
fi

# Change gnome icon theme color
if [[ -f ~/.config/xavecorp/current/theme/icons.theme ]]; then
  gsettings set org.gnome.desktop.interface icon-theme "$(<~/.config/xavecorp/current/theme/icons.theme)"
else
  gsettings set org.gnome.desktop.interface icon-theme "Yaru-blue"
fi

# Change Chromium colors
if command -v chromium &>/dev/null; then
  if [[ -f ~/.config/xavecorp/current/theme/light.mode ]]; then
    chromium --no-startup-window --set-color-scheme="light"
  else
    chromium --no-startup-window --set-color-scheme="dark"
  fi

  if [[ -f ~/.config/xavecorp/current/theme/chromium.theme ]]; then
    chromium --no-startup-window --set-theme-color="$(<~/.config/xavecorp/current/theme/chromium.theme)"
  else
    # Use a default, neutral grey if theme doesn't have a color
    chromium --no-startup-window --set-theme-color="28,32,39"
  fi
fi

# Trigger kitty config reload
touch "$HOME/.config/kitty/kitty.toml"

# Restart components to apply new theme
pkill -SIGUSR2 btop
xavecorp-restart-waybar
xavecorp-restart-swayosd
makoctl reload
hyprctl reload

# Set new background
xavecorp-theme-bg-next
