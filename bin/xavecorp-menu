show_install_style_menu() {
  case $(menu "Install" "󰸌  Theme\n  Background\n  Font") in
  *Theme*) present_terminal xavecorp-theme-install ;;
  *Background*) nautilus ~/.config/xavecorp/current/theme/backgrounds ;;
  *Font*) show_install_font_menu ;;
  *) show_install_menu ;;
  esac
}

show_install_font_menu() {
  case $(menu "Install" "  Meslo LG Mono\n  Fira Code\n  Victor Code\n  Bistream Vera Mono" "-w 350") in
  *Meslo*) install_font "Meslo LG Mono" "ttf-meslo-nerd" "MesloLGL Nerd Font" ;;
  *Fira*) install_font "Fira Code" "ttf-firacode-nerd" "FiraCode Nerd Font" ;;
  *Victor*) install_font "Victor Code" "ttf-victor-mono-nerd" "VictorMono Nerd Font" ;;
  *Bistream*) install_font "Bistream Vera Code" "ttf-bitstream-vera-mono-nerd" "BitstromWera Nerd Font" ;;
  *) show_install_menu ;;
  esac
}

show_install_development_menu() {
  case $(menu "Install" "󰫏  Ruby on Rails\n  Docker DB\n  JavaScript\n  Go\n  PHP\n  Python\n  Elixir\n  Zig\n  Rust\n  Java\n  .NET\n  OCaml") in
  *Rails*) present_terminal "xavecorp-install-dev-env ruby" ;;
  *Docker*) present_terminal xavecorp-install-docker-dbs ;;
  *JavaScript*) show_install_javascript_menu ;;
  *Go*) present_terminal "xavecorp-install-dev-env go" ;;
  *PHP*) show_install_php_menu ;;
  *Python*) present_terminal "xavecorp-install-dev-env python" ;;
  *Elixir*) show_install_elixir_menu ;;
  *Zig*) present_terminal "xavecorp-install-dev-env zig" ;;
  *Rust*) present_terminal "xavecorp-install-dev-env rust" ;;
  *Java*) present_terminal "xavecorp-install-dev-env java" ;;
  *NET*) present_terminal "xavecorp-install-dev-env dotnet" ;;
  *OCaml*) present_terminal "xavecorp-install-dev-env ocaml" ;;
  *) show_install_menu ;;
  esac
}

show_install_javascript_menu() {
  case $(menu "Install" "  Node.js\n  Bun\n  Deno") in
  *Node*) present_terminal "xavecorp-install-dev-env node" ;;
  *Bun*) present_terminal "xavecorp-install-dev-env bun" ;;
  *Deno*) present_terminal "xavecorp-install-dev-env deno" ;;
  *) show_install_development_menu ;;
  esac
}

show_install_php_menu() {
  case $(menu "Install" "  PHP\n  Laravel\n  Symfony") in
  *PHP*) present_terminal "xavecorp-install-dev-env php" ;;
  *Laravel*) present_terminal "xavecorp-install-dev-env laravel" ;;
  *Symfony*) present_terminal "xavecorp-install-dev-env symfony" ;;
  *) show_install_development_menu ;;
  esac
}

show_install_elixir_menu() {
  case $(menu "Install" "  Elixir\n  Phoenix") in
  *Elixir*) present_terminal "xavecorp-install-dev-env elixir" ;;
  *Phoenix*) present_terminal "xavecorp-install-dev-env phoenix" ;;
  *) show_install_development_menu ;;
  esac
}

show_remove_menu() {
  case $(menu "Remove" "󰣇  Package\n  Web App\n  TUI\n󰸌  Theme\n󰈷  Fingerprint\n  Fido2") in
  *Package*) terminal xavecorp-pkg-remove ;;
  *Web*) present_terminal xavecorp-webapp-remove ;;
  *TUI*) present_terminal xavecorp-tui-remove ;;
  *Theme*) present_terminal xavecorp-theme-remove ;;
  *Fingerprint*) present_terminal "xavecorp-setup-fingerprint --remove" ;;
  *Fido2*) present_terminal "xavecorp-setup-fido2 --remove" ;;
  *) show_main_menu ;;
  esac
}

show_update_menu() {
  case $(menu "Update" " Xavecorp\n  Config\n󰸌  Themes\n  Process\n  Timezone") in
  *Xavecorp*) present_terminal xavecorp-update ;;
  *Config*) show_update_config_menu ;;
  *Themes*) present_terminal xavecorp-theme-update ;;
  *Process*) show_update_process_menu ;;
  *Timezone*) xavecorp-cmd-tzupdate ;;
  *) show_main_menu ;;
  esac
}

show_update_process_menu() {
  case $(menu "Restart" "  Hypridle\n  Hyprsunset\n  Swayosd\n󰌧  Walker\n󰍜  Waybar") in
  *Hypridle*) xavecorp-restart-hypridle ;;
  *Hyprsunset*) xavecorp-restart-hyprsunset ;;
  *Swayosd*) xavecorp-restart-swayosd ;;
  *Walker*) xavecorp-restart-walker ;;
  *Waybar*) xavecorp-restart-waybar ;;
  *) show_main_menu ;;
  esac
}

show_update_config_menu() {
  case $(menu "Use default config" "  Hyprland\n  Hypridle\n  Hyprlock\n  Hyprsunset\n󱣴  Plymouth\n  Swayosd\n󰌧  Walker\n󰍜  Waybar") in
  *Hyprland*) present_terminal xavecorp-refresh-hyprland ;;
  *Hypridle*) present_terminal xavecorp-refresh-hypridle ;;
  *Hyprlock*) present_terminal xavecorp-refresh-hyprlock ;;
  *Hyprsunset*) present_terminal xavecorp-refresh-hyprsunset ;;
  *Plymouth*) present_terminal xavecorp-refresh-plymouth ;;
  *Swayosd*) present_terminal xavecorp-refresh-swayosd ;;
  *Walker*) present_terminal xavecorp-refresh-walker ;;
  *Waybar*) present_terminal xavecorp-refresh-waybar ;;
  *) show_main_menu ;;
  esac
}

show_system_menu() {
  case $(menu "System" "  Lock\n󱄄  Screensaver\n󰤄  Suspend\n  Relaunch\n󰜉  Restart\n󰐥  Shutdown") in
  *Lock*) xavecorp-lock-screen ;;
  *Screensaver*) xavecorp-launch-screensaver force ;;
  *Suspend*) systemctl suspend ;;
  *Relaunch*) uwsm stop ;;
  *Restart*) systemctl reboot ;;
  *Shutdown*) systemctl poweroff ;;
  *) show_main_menu ;;
  esac
}

show_main_menu() {
  go_to_menu "$(menu "Go" "󰀻  Apps\n󰧑  Learn\n  Capture\n󰔎  Toggle\n  Style\n  Setup\n󰉉  Install\n󰭌  Remove\n  Update\n  About\n  System")"
}

go_to_menu() {
  case "${1,,}" in
  *apps*) walker -p "Launch…" ;;
  *learn*) show_learn_menu ;;
  *style*) show_style_menu ;;
  *theme*) show_theme_menu ;;
  *capture*) show_capture_menu ;;
  *screenshot*) show_screenshot_menu ;;
  *screenrecord*) show_screenrecord_menu ;;
  *toggle*) show_toggle_menu ;;
  *setup*) show_setup_menu ;;
  *power*) show_setup_power_menu ;;
  *install*) show_install_menu ;;
  *remove*) show_remove_menu ;;
  *update*) show_update_menu ;;
  *about*) kitty --class Xavecorp -o font.size=9 -e bash -c 'fastfetch; read -n 1 -s' ;;
  *system*) show_system_menu ;;
  esac
}

if [[ -n "$1" ]]; then
  go_to_menu "$1"
else
  show_main_menu
fi
